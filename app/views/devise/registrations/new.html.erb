<div class="row">
  <div class="col-sm-4 col-sm-offset-4">

    <h1 class="text-center">Cadastrar-se</h1>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :username %><br />
        <%= f.text_field :username, class: 'form-control'  %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: false, class: 'form-control' %>
      </div>

      <div class="form-group">
        <div class="control-label">
          <b>Senha </b>
        </div>
        <% if @minimum_password_length %>
        <i>(<%= @minimum_password_length %> caracteres no mínimo)</i>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group">
        <div class="control-label">
          <b>Confirmação de senha </b>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "Enviar", class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= link_to "Entrar", new_user_session_path %>
    </div>
  </div>
</div>
